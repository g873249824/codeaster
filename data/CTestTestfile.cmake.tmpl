SET(SALOME_TEST_DRIVER "$ENV{ABSOLUTE_APPLI_PATH}/bin/salome/appliskel/salome_test_driver.py")
SET(COMPONENT_NAME ASTER)
SET(TIMEOUT        300)

SET(USER "salometest")
IF($ENV{USER})
    SET(USER "$ENV{USER}")
ENDIF()
SET(RESUTEST_DIR "@ASRUN_TMPDIR@/${USER}_resutest")

# SET(GOOD_TESTS forma02a
# )

execute_process(COMMAND as_run "--list" "--all" "--filter" "'sequential' in testlist" OUTPUT_VARIABLE STR_TESTS OUTPUT_STRIP_TRAILING_WHITESPACE)

separate_arguments(GOOD_TESTS UNIX_COMMAND ${STR_TESTS})

FOREACH(testname ${GOOD_TESTS})
       SET(TEST_NAME ASTER_${testname})
       SET(TEST_DIR ${RESUTEST_DIR}/${testname})
       ADD_TEST(${TEST_NAME} as_run --test ${testname} ${TEST_DIR} --run_params=facmtps=3)
       SET_TESTS_PROPERTIES(${TEST_NAME} PROPERTIES LABELS "${COMPONENT_NAME}")
ENDFOREACH()
