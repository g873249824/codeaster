# TEST DES VALEURS DE LA TABLE CREE
#
SIYY=DEFI_FONCTION(      NOM_PARA='EPSI',
                         PROL_DROITE='LINEAIRE',
                        PROL_GAUCHE='LINEAIRE',
                             VALE=(
                                   0.001404,  2.719E+08,
                                   0.006134,  3.459E+08,
                                   0.014044,  3.789E+08,
                                   0.029764,  4.036E+08,
                                   0.050504,  4.242E+08,
                                   0.106404,  5.276E+08,
                                   )
                    )

