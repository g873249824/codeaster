DEBUT(CODE=_F(NIV_PUB_WEB='INTERNET'),
      PAR_LOT='OUI')

MA0 =LIRE_MAILLAGE(FORMAT='MED')

MA=RAFF_GP(MAILLAGE_N=MA0,
#           NB_RAFF=2,
           TRANCHE_2D=_F(CENTRE=(0.5,0.5),
                         RAYON=0.05,
                         ANGLE=30.,
                         TAILLE=0.1,
                         NB_ZONE=5,),
          )
MA=DEFI_GROUP(reuse =MA,
               MAILLAGE=MA,
               CREA_GROUP_MA=(_F(
                                NOM='TEST1',
                                OPTION='SPHERE',
                                POINT=(0.58,0.55),
                                RAYON=(0.04),
                                ),
                               _F(
                                NOM='TEST2',
                                OPTION='SPHERE',
                                POINT=(0.77,0.66),
                                RAYON=(0.04),),
                              _F(
                                NOM='TEST3',
                                OPTION='SPHERE',
                                POINT=(0.228545,0.768977),
                                RAYON=(0.04),),),                              
                                );
MA=DEFI_GROUP(reuse =MA,
               MAILLAGE=MA,
               CREA_GROUP_NO=(_F(
                                NOM='TEST1',
                                GROUP_MA='TEST1',),
                               _F(
                                NOM='TEST2',
                                GROUP_MA='TEST2',),
                              _F(
                                NOM='TEST3',
                                GROUP_MA='TEST3',),),                              
                                );
IMPR_RESU(FORMAT='MED', UNITE=80, RESU=_F(MAILLAGE=MA),)

# champ de geometrie et de points de gauss (coordonnees des points de gauss)


GEOM=CREA_CHAMP(OPERATION='EXTR',
                TYPE_CHAM='NOEU_GEOM_R',
                NOM_CHAM='GEOMETRIE',
                MAILLAGE=MA )
TABLE1=CREA_TABLE(RESU=_F(CHAM_GD=GEOM,
                         TOUT_CMP='OUI',
#                         TOUT='OUI',
                         GROUP_MA='TEST1',
                         ),
                 )
TABLE1=CALC_TABLE(reuse=TABLE1,
                 TABLE=TABLE1,
                 ACTION=_F(OPERATION='AJOUT_COLONNE',
                           NOM_PARA='NOMBRE',
                           VALE=1.),
                  )
TABLE2=CREA_TABLE(RESU=_F(CHAM_GD=GEOM,
                         TOUT_CMP='OUI',
#                         TOUT='OUI',
                         GROUP_MA='TEST2',
                         ),
                 )
TABLE2=CALC_TABLE(reuse=TABLE2,
                 TABLE=TABLE2,
                 ACTION=_F(OPERATION='AJOUT_COLONNE',
                           NOM_PARA='NOMBRE',
                           VALE=1.),
                  )
TABLE3=CREA_TABLE(RESU=_F(CHAM_GD=GEOM,
                         TOUT_CMP='OUI',
#                         TOUT='OUI',
                         GROUP_MA='TEST3',
                         ),
                 )
TABLE3=CALC_TABLE(reuse=TABLE3,
                 TABLE=TABLE3,
                 ACTION=_F(OPERATION='AJOUT_COLONNE',
                           NOM_PARA='NOMBRE',
                           VALE=1.),
                  )

           
TEST_TABLE(TABLE=TABLE1,
           NOM_PARA='NOMBRE',
           TYPE_TEST='SOMM',
           VALE_CALC=1241,
           TOLE_MACHINE=10,
           CRITERE='ABSOLU')
           
TEST_TABLE(TABLE=TABLE2,
           NOM_PARA='NOMBRE',
           TYPE_TEST='SOMM',
           TOLE_MACHINE=5,
           VALE_CALC=306,
           CRITERE='ABSOLU')
TEST_TABLE(TABLE=TABLE3,
           NOM_PARA='NOMBRE',
           TYPE_TEST='SOMM',
           TOLE_MACHINE=0.5,
           VALE_CALC=7,
           CRITERE='ABSOLU')
FIN()
