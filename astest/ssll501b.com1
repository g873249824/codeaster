   FORMAT='XMGRACE',
   COURBE=(
      _F(FONCTION = MTAST,
         LEGENDE = 'ASTER',
         COULEUR=3,
         STYLE=3,
      ),
      _F(ABSCISSE = [57766.1-x for x in MTAST.Absc()],
         ORDONNEE = [abs(y)    for y in MTAST.Ordo()],
         LEGENDE = 'ASTER recal√©',
         COULEUR=2,
      ),
      _F(FONCTION = MTSYS,
         LEGENDE = 'SYSPIPE',
         COULEUR=1,
         STYLE=0,
         MARQUEUR=5,
      ),
   ),
   TITRE='MT ASTER ET SYSPIPE',
   LEGENDE_X='ABSC_CURV',
   LEGENDE_Y='MT',
)

FIN()
